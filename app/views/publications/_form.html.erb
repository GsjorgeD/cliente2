        <!-- Formulario de pubicaciones -->
              <%= form_with(model: @publication, local: true) do |form| %>

                <div class = "row justify-content-center mb-2">

                  <!-- Titulo de la publicacion -->
                  <div class = "col-12 col-md-6">
                    <label for = "text" class = "form-label">Título de la publicación:</label>
                    <%= form.text_field :title, class: "form-control" %>
                  </div>
        
                  </div>

                <div class = "row justify-content-center mb-2">

                  <!-- Imagen de la publicacion -->
                  <div class = "col-12 col-md-6">
                    <label for = "text" class = "form-label">Imagen:</label>
                        <%=form.file_field :imagen, class: "form-control"  %>
                  </div>
        
                </div>               

                <div class = "row justify-content-center mb-2">

                  <!-- Contenido de la publicacion -->
                  <div class = "col-12 col-md-6">
                    <label for = "text" class = "form-label">Publicación:</label>
                    <%= form.rich_text_area :cuerpo, class: "form-control" %>
                  </div>
        
                </div>                  

                <!-- Guardar publicacion -->
                <div class="row justify-content-center d-grid mt-4 mb-2">
                  <%= form.submit "Guardar publicación", class: "btn btn-success mt-3 mb-5"  %>
                </div>

                <% end %>
