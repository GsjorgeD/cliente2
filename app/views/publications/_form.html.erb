<%= form_with(model: @publication, local: true) do |form|%>

  <div >
    <%=form.label :title %>
    <%=form.text_field :title %>
  </div>

  <div class="field">
    <%=form.label :imagen %>
    <%=form.file_field :imagen %>
  </div>

  <div >
    <%=form.label :cuerpo %>
    <%=form.rich_text_area :cuerpo %>
  </div>

  <div>
    <%=form.submit%>
  </div>
<% end %>
